<head>
  <title>
    <%=title%>
  </title>
  <link rel="stylesheet" href="/details.css">
  <script src="https://kit.fontawesome.com/878d22e054.js" crossorigin="anonymous"></script>
  <script src="/star-ratings.js"></script>
</head>

<body>
  <div class="navigate">
    <nav>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="#">Brands</a>
          <div class="sub-menu">
            <ul class="sub-menu">
              <li><a href="/cart/iphone">iphone</a></li>
              <li><a href="">samsung</a></li>
              <li><a href="">realme</a></li>
              <li><a href="/cart/oppo">oppo</a></li>
              <li><a href="/cart/vivo">vivo</a></li>
              <li><a href="">oneplus</a></li>
            </ul>
          </div>
        </li>
        <li><a href="#">Stores</a></li>
        <li><a href="#">About Us</a></li>
        <li><a href="/users/sign-up" target="_blank"><button type="submit">Sign-Up / Sign-In</button></a></li>
      </ul>
      <a href="/cart/show"><img src="/pic/sc1.png" alt="" class="cart1" width="38" height="40"> </a>
      <div class="countitems">0</div>
      <% if(locals.user){%>
        <a href="/users/profile"><button class="cart2"><i class="fa-solid fa-user"></i>&nbsp;&nbsp;<%=user.name%>
          </button></a>
        <%} else{%>
          <a href="/users/sign-in"><button class="cart2"><i class="fa-solid fa-user"></i></button></a>
          <%}%>
            <img src="/pic/menu.png" alt="" class="menu-btn" width="40" height="50">
    </nav>
  </div>
  <div class="card-wrapper">
    <div class="card">
      <!-- card left -->
      <div class="product-imgs">
        <div class="img-display">
          <div class="img-showcase">
            <img src="<%=product.bigImg%>" alt="shoe image">
          </div>
        </div>
        <div class="button-container">
          <div class="purchase-info">
            <button type="button" class="btn1 btn">
              Add to Cart <i class="fas fa-shopping-cart"></i>
            </button>
          </div>
          <div class="purchase-info">
            <button type="button" class="btn2 btn">
              Move to Wishlist <i class="fa-solid fa-list-check"></i></i>
            </button>
          </div>
        </div>
      </div>


      <!-- card right -->
      <div class="product-content">
        <h2 class="product-title">
          <%=product.desc%>
        </h2>
        <a href="#" class="product-link">visit <%=product.brand%> store</a>
        <div class="product-rating">
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star-half-alt"></i>
          <span>4.7(21)</span>
        </div>
        <form oninput="ans.value=parseInt(n1.value)+parseInt(n2.value)">
          <input type="hidden" name="n1" value="<%=product.mrp%>">
          <input type="hidden" name="n2" value="<%=product.price%>">
          <output name="ans" id="#outputd"></output>
        </form>
        <div class="product-price">
          <p class="last-price">Old Price: <span>₹ <%=product.mrp%></span></p>
          <p class="new-price">New Price: <span>₹ <%=product.price%> (5%)</span></p>
        </div>

        <div class="product-detail">
          <h2>about this item: </h2>
          <p>
            <%=product.longdesc%>
          </p>
          <h2>specifications: </h2>
          <ul>
            <li>Color: <span>
                <%=product.color%>
              </span></li>
            <li>Front Camera: <span>
                <%=product.frontcam%>
              </span></li>
            <li>Rear Camera: <span>
                <%=product.rearcam%>
              </span></li>
            <li>Operating System: <span>
                <%=product.Android%>
              </span></li>
            <li>Processor: <span>
                <%=product.processor%>
              </span></li>
            <li>Battery: <span>
                <%=product.battery%> mah
              </span></li>
            <li>Memory: <span>
                <%=product.ram%> GB
              </span></li>
            <li>Internal Storage: <span>
                <%=product.storage%> GB
              </span></li>
            <li>Seller: <span>
                <%=product.seller%>
              </span></li>
          </ul>
        </div>

        <div class="social-links">
          <p>Share At: </p>
          <a href="#">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="#">
            <i class="fab fa-whatsapp"></i>
          </a>
          <a href="#">
            <i class="fab fa-pinterest"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="ratings">
    <h1>User Ratings and Review:
    </h1>
    <div class="product-comments">
      <%if(locals.user){%>
        <div class="rating-wrap">
          <h3>Give Your Star Rating:</h3>
          <div class="center">
            <fieldset class="rating">
              <input type="radio" id="star5" name="rating" value="5" /><label for="star5" class="full"
                title="Awesome"></label>
              <input type="radio" id="star4.5" name="rating" value="4.5" /><label for="star4.5" class="half"></label>
              <input type="radio" id="star4" name="rating" value="4" /><label for="star4" class="full"></label>
              <input type="radio" id="star3.5" name="rating" value="3.5" /><label for="star3.5" class="half"></label>
              <input type="radio" id="star3" name="rating" value="3" /><label for="star3" class="full"></label>
              <input type="radio" id="star2.5" name="rating" value="2.5" /><label for="star2.5" class="half"></label>
              <input type="radio" id="star2" name="rating" value="2" /><label for="star2" class="full"></label>
              <input type="radio" id="star1.5" name="rating" value="1.5" /><label for="star1.5" class="half"></label>
              <input type="radio" id="star1" name="rating" value="1" /><label for="star1" class="full"></label>
              <input type="radio" id="star0.5" name="rating" value="0.5" /><label for="star0.5" class="half"></label>
            </fieldset>
            <h4 id="rating-value"></h4>
          </div>
        </div>

        <form action="/comments/create/<%=product._id%>" method="post">
          <h3>Give Your Comment:</h3>
          <input type="number" name="star" id="starcount" max="5" min="0">
          <input type="text" name="content" id="textarea">
          <input type="submit" value="Add comment" id="btnn">
        </form>
        <%}%>
    </div>
    <div class="comments-list">
      <%for(comment of product.comments){%>
        <div class="name">
          <i class="fa-solid fa-user"></i>
          <h4><%=comment.user.name%></h4>
          <p><%=comment.star%></p>
          <a href="/comments/destroy/<%=comment.id%>"><i class="fa-solid fa-delete-left fa-lg"></i></a>
        </div>
        <div class="comment">
          <h4><%=comment.content%></h4>
        </div>
      <%}%>
    </div>
  </div>


</body>