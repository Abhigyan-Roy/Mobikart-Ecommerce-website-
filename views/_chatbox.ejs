<link rel="stylesheet" href="/chatbox.css">
<%if(locals.user){%>
    <div id="chat-box">
        <ul id="chat-list">
            <li class="other"><span>Other Message</span></li>
            <li class="self"><span>Self Message</span></li>
        </ul>
        <div id="chat-input">
            <input type="text" id="mesage" placeholder="Type message here">
            <button id="send-message">Send</button>
        </div>
    </div>
<%}%>