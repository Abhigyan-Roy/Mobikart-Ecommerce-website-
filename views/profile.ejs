
<head>
    <title><%=title%></title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
        <style>
            body {
                background-color: black;
                color: white;
            }
        </style>
        <link rel="stylesheet" href="/profile.css">
</head>
<body>
    <div class="navigate">
        <nav>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li>
                    <a href="#">Brands <i class="fas fa-caret-down"></i></a>
                    <ul class="dropdown">
                        <li><a href="/cart/samsung">samsung</a></li>
                        <li><a href="/cart/oppo">oppo</a></li>
                        <li><a href="/cart/realme">realme</a></li>
                        <li><a href="/cart/vivo">vivo</a></li>
                        <li><a href="/cart/iphone">iphone</a></li>
                        <li><a href="/cart/oneplus">oneplus</a></li>
                    </ul>
                </li>
                <li><a href="#">Stores</a></li>
                <li><a href="/cart/aboutus">Contact Us</a></li>
                <li><a href="/users/sign-up" target="_blank"><button type="submit">Sign-Up / Sign-In</button></a></li>
            </ul>
          <a href="/cart/show"><img src="/pic/sc1.png" alt="" class="cart1" width="38" height="40"> </a>
          <%if(locals.user){%>
            <% if(cart==null || cart.items.length==0){%>
                <div class="countitems">0</div>
            <%} else{%>
               <%  let totalQty=0;
                   for(let i = 0; i < cart.items.length; i++){
                   let product = cart.items[i];
                   totalQty+=product.qty;  
               %>
               <%}%>
               <div class="countitems"><%=totalQty%></div>
             <%}%>
           <%}%>
          <% if(locals.user){%>
            <a href="/users/profile"><button class="cart2"><i class="fa-solid fa-user"></i>&nbsp;&nbsp;<%=user.name%>
              </button></a>
            <%} else{%>
              <a href="/users/sign-in"><button class="cart2"><i class="fa-solid fa-user"></i></button></a>
              <%}%>
                <img src="/pic/menu.png" alt="" class="menu-btn" width="40" height="50">
        </nav>
      </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="profile-links">
                    <img src="<%=user.avatar%>" alt="">
                    <h2><i class="fa-solid fa-user fa-xs"></i> <%=user.name%></h2><br>
                    <li class="neon"><a href="/users/sign-out">Sign Out</a></li>
                    <li class="neon"><a href="/users/editpro/<%=user._id%>">Edit Profile</a></li>
                    <li class="neon"><a href="/order/myorder">My Orders</a></li>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mt-custum">
                    <div class="details">
                        <div class="row">
                            <div class="col-8">
                                User Name
                            </div>
                            <div class="col-4">
                                <%=user.name%>
                            </div>
                        </div>
                    </div>
                    <div class="details">
                        <div class="row">
                            <div class="col-8">
                                Full Name
                            </div>
                            <div class="col-4">
                                <%=user.fullName%>
                            </div>
                        </div>
                    </div>
                    <div class="details">
                        <div class="row">
                            <div class="col-8">
                                Email
                            </div>
                            <div class="col-4">
                                <%=user.email%>
                            </div>
                        </div>
                    </div>
                    <div class="details">
                        <div class="row">
                            <div class="col-8">
                                Gender
                            </div>
                            <div class="col-4">
                                <%=user.gender%>
                            </div>
                        </div>
                    </div>
                    <div class="details">
                        <div class="row">
                            <div class="col-8">
                                Date Of Birth
                            </div>
                            <div class="col-4">
                                <%=user.dateOfBirth.toLocaleString('en-US', { dateStyle: 'medium'})%>
                            </div>
                        </div>
                    </div>
                    <div class="details">
                        <div class="row">
                            <div class="col-8">
                                Contact Number
                            </div>
                            <div class="col-4">
                                <%=user.phoneNumber%>
                            </div>
                        </div>
                    </div>
                    <div class="details">
                        <div class="row">
                            <div class="col-8">
                                Address
                            </div>
                            <div class="col-4">
                                <%=user.address%>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
</body>
