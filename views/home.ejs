<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MobiCart</title>
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="/index.css">
    <link rel="stylesheet" href="/background.css">
    <link rel="stylesheet" href="/slidein.css">
    <link rel="stylesheet" href="/chatbox.css">
    <script src="https://kit.fontawesome.com/878d22e054.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.1.js"
        integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>
</head>

<body>
    <section class="wrapper">
        <div id="stars"></div>
        <div id="stars2"></div>
        <div id="stars3"></div>
    </section>
    <nav>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li>
                <a href="#">Brands <i class="fas fa-caret-down"></i></a>
                <ul class="dropdown">
                    <li><a href="/cart/samsung">samsung</a></li>
                    <li><a href="/cart/oppo">oppo</a></li>
                    <li><a href="/cart/realme">realme</a></li>
                    <li><a href="/cart/vivo">vivo</a></li>
                    <li><a href="/cart/iphone">iphone</a></li>
                    <li><a href="/cart/oneplus">oneplus</a></li>
                </ul>
            </li>
            <li><a href="/cart/compare">Compare</a></li>
            <li><a href="/cart/aboutus">Contact Us</a></li>
            <li><a href="/users/sign-up" target="_blank"><button type="submit">Sign-Up / Sign-In</button></a></li>
        </ul>
        <a href="/cart/show"><img src="/pic/sc1.png" alt="" class="cart1" width="38" height="40"> </a>
        <%if(locals.user){%>
            <% if(cart==null || cart.items.length==0){%>
                <div class="countitems">0</div>
                <%} else{%>
                    <% let totalQty=0; for(let i=0; i < cart.items.length; i++){ let product=cart.items[i];
                        totalQty+=product.qty; %>
                        <%}%>

                            <div class="countitems">
                                <%=totalQty%>
                            </div>
                            <%}%>
                                <%}%>
                                    <% if(locals.user){%>
                                        <a href="/users/profile"><button class="cart2"><i
                                                    class="fa-solid fa-user"></i>&nbsp;&nbsp;<%=user.name%></button></a>
                                        <%} else{%>
                                            <a href="/users/sign-in"><button class="cart2"><i
                                                        class="fa-solid fa-user"></i></button></a>
                                            <%}%>
                                                <img src="/pic/menu2.png" alt="" class="menu-btn" width="40"
                                                    height="50">
    </nav>
    <header>
        <div class="heading">
            <div class="head">
                <img src="pic/sc3.png" alt="" class="logo" width="220" height="110">
                <h1>MobiCart</h1>
            </div>
            <div class="line"></div>
            <div class="text-typing">
                <p>search, compare and buy.....</p>
            </div>
            <div class="search-container">
                <form>
                    <input type="text" name="search" placeholder="Search....">
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
            </div>
        </div>
    </header>
    <main>
        <div class="brands" data-aos="fade-right">
            <h2>Premium SmartPhone Deals</h2>
        </div>
        <div class="card-container">
            <div class="swiper mySwiper">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <div class="card">
                            <img src="pic/p3.webp" data-aos="fade-down" />
                            <div class="two">
                                <h2>S22 Ultra 5G</h2>
                                <h4>256GB</h4>
                                <h3><s>₹ 1,31,099</s>&nbsp;&nbsp;&nbsp;₹ 1,09,999</h3>
                                <h3></h3>
                                <button type="submit"><a
                                        href="http://localhost:7500/cart/showdetails/63b55518a5b89c9962e99813">checkout
                                        here</a></button>
                            </div>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="card">
                            <img src="pic/p5.webp" data-aos="fade-down" />
                            <div class="two">
                                <h2>Xiomi 12 Pro</h2>
                                <h4>256GB</h4>
                                <h3><s>₹ 67,499</s>&nbsp;&nbsp;&nbsp;₹ 59,999</h3>
                                <h3></h3>
                                <button type="submit"><a
                                        href="http://localhost:7500/cart/showdetails/63b55702a5b89c9962e99826">checkout
                                        here</a></button>
                            </div>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="card">
                            <img src="pic/p3.png" data-aos="fade-down" />
                            <div class="two">
                                <h2>iPhone 13</h2>
                                <h4>128GB</h4>
                                <h3><s>₹ 71,990</s>&nbsp;&nbsp;&nbsp;₹ 69,990</h3>
                                <h3></h3>
                                <button type="submit"><a
                                        href="http://localhost:7500/cart/showdetails/63b55260a5b89c9962e997f1">checkout
                                        here</a></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
        <div class="brands" data-aos="zoom-in-down" data-aos-duration="600">
            <h2>New Launches</h2>
        </div>
        <div class="card-container">
            <div class="swiper mySwiper">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <div class="card">
                            <img src="pic/p8.png" width="240" data-aos="fade-up" />
                            <div class="two">
                                <h2>Vivo X80</h2>
                                <h4>8GB+128GB | 12GB+256GB</h4>
                                <h4>50 MP Quad Camera</h4>
                                <h3>Starting at ₹ 54,999</h3>
                                <button type="submit">checkout here</button>
                            </div>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="card">
                            <img src="pic/p6.webp" data-aos="fade-up" />
                            <div class="two">
                                <h2>Oppo F21 Pro</h2>
                                <h4>8GB+128GB</h4>
                                <h4>64 MP Tri Camera</h4>
                                <h3>Starting at ₹ 26,999</h3>
                                <button type="submit">checkout here</button>
                            </div>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="card">
                            <img src="pic/p6.png" data-aos="fade-up" />
                            <div class="two">
                                <h2>Galaxy M53 5G</h2>
                                <h4>6GB+128GB</h4>
                                <h4>108 MP Quad Camera</h4>
                                <h3>Starting at ₹ 28,499</h3>
                                <button type="submit">checkout here</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
        <div class="brands">
            <h2>Shop By Brands</h2>
        </div>
        <div class="shop">
            <div class="brandname"><a href="/cart/vivo"><img src="pic/br1.jpg" alt="" width="180" height="80"
                        data-aos="flip-left"></a></div>
            <div class="brandname"><a href="/cart/oppo"><img src="pic/br2.png" alt="" width="180" height="80"
                        data-aos="flip-left"></a></div>
            <div class="brandname"><a href="/cart/samsung"><img src="pic/br3.png" alt="" width="180" height="80"
                        data-aos="flip-left"></a></div>
            <div class="brandname"><a href="/cart/realme"><img src="pic/br4.png" alt="" width="180" height="80"
                        data-aos="flip-left"></a></div>
            <div class="brandname"><a href="/cart/oneplus"><img src="pic/br5.png" alt="" width="180" height="80"
                        data-aos="flip-left"></a></div>
            <div class="brandname"><a href="/cart/iphone"><img src="pic/br6.png" alt="" width="180" height="80"
                        data-aos="flip-left"></a></div>
        </div>
        <div class="brands">
            <h2>Top Reasons to Buy from MobiCart</h2>
        </div>
        <div class="shop">
            <div class="reasons"><img src="pic/r1.png" alt="" width="220" height="130"></div>
            <div class="reasons"><img src="pic/r2.png" alt="" width="200" height="150"></div>
            <div class="reasons"><img src="pic/r3.png" alt="" width="200" height="160"></div>
        </div>
        <div class="app-show">
            <div class="app">
                <img src="/pic/app_im1.png" alt="" width="460" height="400">
            </div>
            <div class="write">
                <div class="fontt" data-aos="zoom-in-up" data-aos-duration="600">
                    GET OUR MOBICART APP
                </div>
                <div class="fontt2">
                    We will send you a link, open it on your phone to download the app...
                </div>
            </div>
            <div class="check">
                <input type="radio" name="" class="checkout">Email &nbsp &nbsp &nbsp
                <input type="radio" name="" class="checkout" disabled>Phone
            </div>
            <div class="text">
                <input type="email" id="texthold" placeholder="Email">
                <button id="buttonhold"><a href="">Share App Link</a></button>
            </div>
            <div class="down">
                <img src="/pic/google.webp" alt="" width="130" height="40">
                <img src="/pic/appstore.webp" alt="" width="130" height="40">
            </div>
        </div>
    </main>
    <%if(locals.user){%>
        <div class="chat-box">
            <!-- client -->
            <div class="client">
                <img src="<%=user.avatar%>" alt="logo" />
                <div class="client-info">
                    <h1>
                        <%=user.name%>
                    </h1>
                    <h2>
                        <p>online</p>
                    </h2>
                </div>
            </div>

            <!-- main chat section -->
            <div class="chats">
                <div class="incoming">Hi!</div>
                <div class="incoming">How can i help you?</div>
            </div>

            <!-- input field section -->
            <div class="chat-input">
                <input type="text" placeholder="Enter Message" id="textarea" speech-recognition />
                <button class="send-btn" type="submit">
                    <img src="pic/send1.png" alt="send-btn">
                </button>
                <button class="voice-on">
                    <img src="pic/mic.png" alt="voice-btn">
                </button>
                <div class="instructions">Start</div>
            </div>
        </div>

        <!-- button -->
        <div class="chat-btn">
            <img src="pic/Circle-icons-chat3.png" alt="chat box icon btn">
        </div>
        <%}%>
            <footer>
                <div class="foot1">
                    Back To Top
                </div>
                <div class="foot2">
                    <div id="first">
                        <h2>MobiCart</h2>
                        <p>MobiCart is an Online eCommerce store where users can buy awesome and latest SmartPhones
                            from all over the world in India.</p>
                    </div>
                    <div id="first">
                        <h2>Find In Last</h2>
                        <p>
                        <ul>
                            <li>FAQs</li>
                            <li>Press</li>
                            <li>Order Tracking</li>
                        </ul>
                        </p>
                    </div>
                    <div id="first">
                        <h2>Information</h2>
                        <p>
                        <ul>
                            <li>Terms & Conditions</li>
                            <li>Shipping Policy</li>
                            <li>Return & Refund Policy</li>
                        </ul>
                        </p>
                    </div>
                </div>
            </footer>
            <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>

            <script>
                var swiper = new Swiper(".mySwiper", {
                    slidesPerView: 3,
                    spaceBetween: 30,
                    speed: 1000,
                    slidesPerGroup: 3,
                    loop: true,
                    loopFillGroupWithBlank: true,
                    pagination: {
                        el: ".swiper-pagination",
                        clickable: true,
                    },
                    navigation: {
                        nextEl: ".swiper-button-next",
                        prevEl: ".swiper-button-prev",
                    },
                    breakpoints: {
                        // when window width is >= 320px
                        320: {
                            slidesPerView: 1,
                            spaceBetween: 20
                        },
                        540: {
                            slidesPerView: 2,
                            spaceBetween: 20
                        },
                        864: {
                            slidesPerView: 3,
                            spaceBetween: 20
                        }
                    }
                });
            </script>
            <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
            <script>
                AOS.init({
                    duration: 1000
                });
            </script>
            <script src="first.js"></script>
            <script src="https://cdn.socket.io/4.5.3/socket.io.min.js"
                integrity="sha384-WPFUvHkB1aHA5TDSZi6xtDgkF0wXJcIIxXhC6h8OT8EH3fC5PWro5pWJ1THjcfEi"
                crossorigin="anonymous"></script>
            <script src="chat_engine.js"></script>
            <script>
                $(document).ready(() => {
                    $(".chat-btn").click(() => {
                        $(".chat-box").fadeToggle(250)
                    })
                })
            </script>

</body>

</html>